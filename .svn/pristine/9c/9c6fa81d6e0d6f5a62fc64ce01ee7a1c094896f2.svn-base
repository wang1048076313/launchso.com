.sy-box{position: relative;}
.sy-pager{bottom: 20px;}
.sy-pager li{width: 10px;height: 10px;margin-right: 5px;margin-left: 5px;transition: width .5s linear .1s;}
.sy-pager li a{border-radius:5px;}
.sy-pager li.sy-active{width: 30px;}
.sy-pager li.sy-active a{border-radius:5px;background: #fff;}
.column-title{color: #2f3030;}
.solution-title{color: #2f3030;}
.solution-title-new{font-size:24px;text-align: center;color: #2f3030}
.solution-box{padding-top: 60px;}
.column-title{font-size: 30px;text-align: center;margin-bottom: 20px}
.column-desc{font-size: 18px;text-align: center;line-height: 1.5;margin: 0 150px;color: #646262;}

