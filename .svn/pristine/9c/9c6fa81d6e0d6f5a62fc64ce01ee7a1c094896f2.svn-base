.solution-field-item{padding-top:70px;}
.solution-field-scroll-box-1{position: relative;}
.solution-field-scroll-box-2{position: relative;}
.solution-field-scroll-prev-1,.solution-field-scroll-next-1{display: none;position: absolute;width: 22px;height: 42px;top: 127px;cursor: pointer;}
.solution-field-scroll-prev-1{background: url(../images/icon-prev.png) center no-repeat;left: 40px;}
.solution-field-scroll-next-1{background: url(../images/icon-next.png) center no-repeat;right: 30px;}
.solution-field-scroll-prev-2,.solution-field-scroll-next-2{display: none;position: absolute;width: 22px;height: 42px;top: 155px;cursor: pointer;}
.solution-field-scroll-prev-2{background: url(../images/icon-prev.png) center no-repeat;left: 0px;}
.solution-field-scroll-next-2{background: url(../images/icon-next.png) center no-repeat;right: 0px;}
.solution-content-item-1{display: none;margin-left: -3px;}
/*.solution-content-item-1 li{float: left;width: 250px;height: 340px;padding: 10px;margin-left: 6px;margin-right: 6px;}*/
.solution-content-item-1 li{float: left;width: 250px;height: 340px;padding: 8px;}
.solution-content-item-1 a:hover .solution-thumb{box-shadow: 0 0 10px #aaa;}
.solution-content-item-1 a:hover .solution-title{color:#ed6d2c;}
.solution-content-item-1 a:hover .solution-title-zh{color:#ed6d2c;}
/*.solution-thumb{display: block;width: 250px;height: 287px;overflow: hidden;}*/
.solution-thumb{display: block;width: 238px;height: 274px;overflow: hidden;}
.solution-thumb img{width: 100%;height: 100%;}
.solution-title{display: block;text-align: center;line-height: 20px;margin-top: 10px;width:216px;}
.solution-title-en{display: block;font-size: 18px;}
.solution-title-zh{display: block;color: #646262;margin-top: 5px;font-size: 14px;}
.solution-content-item-2{display: none;margin-left: -3px;}
/*.solution-content-item-2 li{float: left;width: 250px;height: 340px;padding: 10px;margin-left: 6px;margin-right: 6px;}*/
.solution-content-item-2 li{float: left;width: 250px;height: 320px;padding: 8px;}
.solution-content-item-2 a:hover .solution-thumb{box-shadow: 0 0 10px #aaa;}
.solution-content-item-2 a:hover .solution-title{color:#ed6d2c;}
.solution-content-item-2 a:hover .solution-title-zh{color:#ed6d2c;}


.go-thumb{float: left;position: relative;margin-top: 5px;margin-left: 2px;cursor: pointer;}
/*.go-thumb img{width: 100%}*/
.go-more{display: block;  float: right; color: #256fa9;  font-size: 18px;  margin-top: 20px;}
.go-more:hover{text-decoration: underline;cursor: pointer;}
.go-thumb-span{font-size: 14px;color: #ffffff;background: rgba(0,0,0,0.6);line-height: 21px;padding: 8px;display: inline-block;position: absolute;cursor: pointer;top: 263px;left: 0px;width: 574px;}

.gradient-left{
    width: 180px;
    height: 2px;
    margin: 7px 30px;
    display: inline-block;
    background:-webkit-linear-gradient(left,#ffffff,#c4c4c4);
    background: -moz-linear-gradient(left, #ffffff, #c4c4c4);
    background: -o-linear-gradient(left, #ffffff, #c4c4c4);
}
.gradient-right{
    width: 180px;
    height: 2px;
    margin: 7px 30px;
    display: inline-block;
    background:-webkit-linear-gradient(left,#c4c4c4,#ffffff);
    background: -moz-linear-gradient(left, #c4c4c4, #ffffff);
    background: -o-linear-gradient(left, #c4c4c4, #ffffff);
}
